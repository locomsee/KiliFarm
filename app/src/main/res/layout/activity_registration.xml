<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Authentication.RegistrationActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/lblfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="First Name"
                android:textColor="#55AE1A"
                android:textSize="13dp"
                />
            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="241dp"
                android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lbllastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="Last Name"
            android:textColor="#55AE1A"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="400dp"
            android:inputType="textPersonName" />
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="Phone Number"
                android:textColor="#55AE1A"
                android:textSize="13dp"
                />
            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="241dp"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="Email Address"
                android:textColor="#55AE1A"
                android:textSize="13dp" />
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="400dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="Password"
                android:textColor="#55AE1A"
                android:textSize="13dp"
                />
            <EditText
                android:id="@+id/editTextPass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="241dp"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblconfpass"
                android:layout_width="170dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="Confirm Password"
                android:textColor="#55AE1A"
                android:textSize="13dp" />
            <EditText
                android:id="@+id/editTextConfPass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="400dp"
                android:inputType="textPassword"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/round_button"
            android:textColor="#FFFFFF"
            android:onClick="procData"
            android:text="Register" />


    </LinearLayout>



</LinearLayout>